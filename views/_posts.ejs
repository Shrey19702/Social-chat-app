<li id="post-<%=post._id%>">
    <div>
        <p>
            <%= post.content %> 
            &nbsp;
            <% if( (locals.user) && (locals.user.id == post.user.id) ){%> 
                <a class="delete-post-button" href="/posts/deletePost/<%=post.id%>">X</a>
            <%}%>
        </p>
        <p><%= post.user.name %></p>
    </div>
    <div>
        <% if(locals.user){ %>
            <form action="/posts/comments/createComment" id="user-comment-form" method="post" >
                <textarea name="content" id="comment-text" placeholder="comment something" cols="30" rows="3"></textarea>
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="Comment">
            </form>
        <%}%>

        <p>Comments</p>
        <ul id="comment-list-container">
            <% for(comment of post.comments){ %>
                <%- include('_comment') -%>
            <% } %>
        </ul>

    </div>
</li>
