<header>
    <h1> <%= locals.title %> </h1>
    
    <div class="user-id">
        <% if(locals.user){ %> 
            <button class="user-profile" onclick="window.location.href='/users/profile';"></button>
            <%= user.name %>
            <a href="/users/signout">signout</a>
       <%}else{%> 
            <a href="/users/signin">sign-in</a>
            <a href="/users/signup">sign-up</a>
        <%}%>
    </div>
</header>